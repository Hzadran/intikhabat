<% content_for :title, "Add Item" %>

<div class="ibox float-e-margins">
  <div class="ibox-title">
    <h5>Add Product <small>Please </small></h5>
    <div class="ibox-tools">
      <a class="collapse-link">
        <i class="fa fa-chevron-up"></i>
      </a>
      <a class="close-link">
        <i class="fa fa-times"></i>
      </a>
    </div>
  </div>
  <div class="ibox-content">
    <div class="row">


<%= simple_form_for(@item) do |f| %>
  <%= f.error_notification %>
<div class="col-sm-6 b-r"><h3 class="m-t-none m-b">Item Info</h3>
         
    
              <div class="form-group">
              <label>Product Name</label>
              <%= f.text_field :itm_name, :placeholder=>"Enter Item name", :class=>"form-control", :required=>'' %>
            </div>
        
            <div class="form-group">
              <label>Price</label>
              <%= f.text_field :price, :placeholder=>"Enter item price", :class=>"form-control", :required=>'' %>
            </div>
            <div class="form-group">
              <label>Brought By</label>
              <%= f.text_field :brought_by, :placeholder=>"Enter name who brought", :class=>"form-control", :required=>'' %>
            </div>
            <div class="form-group">
              <label>Date</label>
              <%= f.date_field :date %>
            </div>
             </div>
             
  <div class="col-sm-12">
            <div class="hr-line-dashed"></div>
            <%= f.submit :class=>"btn btn-sm btn-primary pull-right m-t-n-xs" %>
          </div>
      <% end %>
    </div>
  </div>
</div>

