<% content_for :title, "All item" %>

<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5>All Product</h5>
        <div class="ibox-tools">
          <a class="collapse-link">
            <i class="fa fa-chevron-up"></i>
          </a>
          <a class="close-link">
            <i class="fa fa-times"></i>
          </a>
        </div>
      </div>
      <div class="ibox-content">

        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover dataTables-example">
            <thead>
              <tr>
                <th>Product Name</th>
                <th>Price</th>
                <th>Brought By</th>
                <th>Date</th>
                <th>***</th>
                            <th>Buttons</th>
                        </tr>
            </thead>

            <tbody>

            <% @items.each do |item| %>
              <tr>    
        <td><%= link_to item.itm_name, item_path(item)  %></td>
        <td><%= item.price %></td>
        <td><%= item.brought_by %></td>
        <td><%= item.date %></td>
         <td><span class="badge badge-primary"> </span></td>
                <td>
                  <%= link_to item_path(item.id), :class=>'btn btn-white btn-bitbucket', method: :delete, data: {confirm: 'Are you sure?'} do %>
                    <i class="fa fa-trash-o" aria-hidden="true"></i>
                  <% end %>
                  <%= link_to edit_item_path(item.id), :class=>'btn btn-white btn-bitbucket' do %>
                      <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                  <% end %>
                  <%= link_to item_path(item.id), :class=>'btn btn-white btn-bitbucket' do %>
                      <i class="fa fa-print" aria-hidden="true"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>

            </tbody>

            <tfoot>
              <tr>
              
                        <th>Product Name</th>
                <th>Price</th>
                <th>Brought By</th>
                <th>Date</th>
                <th>***</th>
                          <th>Buttons</th>
              </tr>
            </tfoot>
          </table>
        </div>

      </div>
    </div>
  </div>
</div>




