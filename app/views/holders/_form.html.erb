<% content_for :title, "Add Voters" %>

<div class="ibox float-e-margins">
  <div class="ibox-title">
    <h5>Add Voters <small>Please </small></h5>
    <div class="ibox-tools">
      <a class="collapse-link">
        <i class="fa fa-chevron-up"></i>
      </a>
      <a class="close-link">
        <i class="fa fa-times"></i>
      </a>
    </div>
  </div>
  <div class="ibox-content">
    <div class="row">


<%= simple_form_for(@holder) do |f| %>
  <%= f.error_notification %>
<div class="col-sm-6 b-r"><h3 class="m-t-none m-b">Voter Info</h3>
         
    
              <div class="form-group">
              <label>Name</label>
              <%= f.text_field :f, :placeholder=>"Enter voter name", :class=>"form-control", :required=>'' %>
            </div>
        
            <div class="form-group">
              <label>Father Name</label>
              <%= f.text_field :father_nam, :placeholder=>"Enter father name", :class=>"form-control", :required=>'' %>
            </div>
            <div class="form-group">
              <label>Sticker Number</label>
              <%= f.text_field :tazkira_number, :placeholder=>"Enter tazkira_number", :class=>"form-control", :required=>'' %>
            </div>


            <div class="form-group">
              <label>Mobile Number</label>
              <%= f.text_field :mobile_number, :placeholder=>"Enter Mobile Number", :class=>"form-control", :required=>'' %>
            </div>
          

             <div class="form-group">
              <label>Sex</label>
              <%= f.select :sex, options_for_select([["Male", "Male"],["Female", "Female"]]) %>
            </div>
             <div class="form-group">
              <label>Polling Station Address</label>
              <%= f.text_field :address, :placeholder=>"Enter full address", :class=>"form-control", :required=>'' %>
            </div>
             
  <div class="col-sm-12">
            <div class="hr-line-dashed"></div>
            <%= f.submit :class=>"btn btn-sm btn-primary pull-right m-t-n-xs" %>
          </div>
      <% end %>
    </div>
  </div>
</div>









