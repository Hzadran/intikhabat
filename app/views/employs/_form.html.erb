<% content_for :title, "Add Staff" %>

<div class="ibox float-e-margins">
  <div class="ibox-title">
    <h5>Add Staff <small>Please </small></h5>
    <div class="ibox-tools">
      <a class="collapse-link">
        <i class="fa fa-chevron-up"></i>
      </a>
      <a class="close-link">
        <i class="fa fa-times"></i>
      </a>
    </div>
  </div>
  <div class="ibox-content">
    <div class="row">


<%= simple_form_for(@employ) do |f| %>
  <%= f.error_notification %>
<div class="col-sm-6 b-r"><h3 class="m-t-none m-b">Staff Info</h3>
         
    
              <div class="form-group">
              <label>Staff Name</label>
              <%= f.text_field :emp_name, :placeholder=>"Enter staff name", :class=>"form-control", :required=>'' %>
            </div>
        
            <div class="form-group">
              <label>Father Name</label>
              <%= f.text_field :emp_father_name, :placeholder=>"Enter father name", :class=>"form-control", :required=>'' %>
            </div>
            <div class="form-group">
              <label>Sallary</label>
              <%= f.text_field :sallary, :placeholder=>"Enter sallary", :class=>"form-control", :required=>'' %>
            </div>


            <div class="form-group">
              <label>Father Name</label>
              <%= f.text_field :designation, :placeholder=>"Enter designation", :class=>"form-control", :required=>'' %>
            </div>
            
            <div class="form-group">
              <label>Starting Date</label>
              <%= f.date_field :starting_date %>
            </div>
             </div>

             <div class="form-group">
              <label>Mobile Number</label>
              <%= f.text_field :mobile_number, :placeholder=>"Enter Mobile Number", :class=>"form-control", :required=>'' %>
            </div>
             
  <div class="col-sm-12">
            <div class="hr-line-dashed"></div>
            <%= f.submit :class=>"btn btn-sm btn-primary pull-right m-t-n-xs" %>
          </div>
      <% end %>
    </div>
  </div>
</div>





