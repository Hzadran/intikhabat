<% content_for :title, "All Voters" %>

<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5>All Voters info</h5>
        <div class="ibox-tools">
          <a class="collapse-link">
            <i class="fa fa-chevron-up"></i>
          </a>
          <a class="close-link">
            <i class="fa fa-times"></i>
          </a>
        </div>
      </div>
      <div class="ibox-content">

        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover dataTables-example">
            <thead>
              <tr>
                <th>Name</th>
      <th>Father nam</th>
      <th>Tazkira number</th>
      <th>Mobile number</th>
      <th>Sex</th>
      <th>Address</th>
                <th>***</th>
                            <th>Buttons</th>
                        </tr>
            </thead>

            <tbody>

            <% @holders.each do |holder| %>
      <tr>
        <td><%= holder.f %></td>
        <td><%= holder.father_nam %></td>
        <td><%= holder.tazkira_number %></td>
        <td><%= holder.mobile_number %></td>
        <td><%= holder.sex %></td>
        <td><%= holder.address %></td>
         <td><span class="badge badge-primary"> </span></td>
                <td>
                  <%= link_to holder_path(holder.id), :class=>'btn btn-white btn-bitbucket', method: :delete, data: {confirm: 'Are you sure?'} do %>
                    <i class="fa fa-trash-o" aria-hidden="true"></i>
                  <% end %>
                  <%= link_to edit_holder_path(holder.id), :class=>'btn btn-white btn-bitbucket' do %>
                      <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                  <% end %>
                  <%= link_to holder_path(holder.id), :class=>'btn btn-white btn-bitbucket' do %>
                      <i class="fa fa-print" aria-hidden="true"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>

            </tbody>

            <tfoot>
              <tr>
              <th>Name</th>
      <th>Father nam</th>
      <th>Tazkira number</th>
      <th>Mobile number</th>
      <th>Sex</th>
      <th>Address</th>
                <th>***</th>
                            <th>Buttons</th>
              </tr>
            </tfoot>
          </table>
        </div>

      </div>
    </div>
  </div>
</div>

<%= link_to 'NEW Entry', new_holder_path(@holder) %> |






